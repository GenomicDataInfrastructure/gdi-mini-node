# These shapes are based on FDP 1.2 and HealthDCAT-AP v5.
# https://specs.fairdatapoint.org/fdp-specs-v1.2.html#catalogmetadata
# https://healthdataeu.pages.code.europa.eu/healthdcat-ap/releases/release-5/#Catalogue

@prefix  dcat: <http://www.w3.org/ns/dcat#> .
@prefix   dct: <http://purl.org/dc/terms/> .
@prefix fdp-o: <https://w3id.org/fdp/fdp-o#> .
@prefix  foaf: <http://xmlns.com/foaf/0.1/> .
@prefix    sh: <http://www.w3.org/ns/shacl#> .
@prefix   xsd: <http://www.w3.org/2001/XMLSchema#> .

# CatalogShape is based on FDP 1.2 and HealthDCAT-AP v5.

:CatalogShape a sh:NodeShape ;
  sh:targetClass dcat:Catalog ;
  sh:property [
    sh:path dct:conformsTo ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:description ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
  ], [
    sh:path dct:isPartOf ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:license ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:publisher ;
    sh:node :AgentShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:title ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
  ], [
    sh:path dct:accessRights ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path dct:hasVersion ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:issued ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:language ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path dct:modified ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:rights ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path dcat:themeTaxonomy ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dcat:catalog ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path dcat:dataset ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path dcat:record ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path dcat:service ;
    sh:nodeKind sh:IRI ;
  ], [
    sh:path foaf:homepage ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
  ], [
    sh:path fdp-o:metadataIdentifier ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path fdp-o:metadataIssued ;
    sh:datatype xsd:dateTime ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path fdp-o:metadataModified ;
    sh:datatype xsd:dateTime ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] .

# This is customised. More info about foaf namespace:
# https://sparontologies.github.io/foaf/current/foaf.html
:AgentShape a sh:NodeShape ;
  sh:targetClass foaf:Organization ;
  sh:property [
    sh:path foaf:name ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path foaf:mbox ;
    sh:nodeKind sh:IRI ;
    sh:pattern "^mailto:.+@.+\\..+$" ;
    sh:maxCount 1 ;
  ], [
    sh:path foaf:homepage ;
    sh:nodeKind sh:IRI ;
    sh:pattern "^https?://.+$" ;
    sh:maxCount 1 ;
  ] .
